<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:id="@+id/match_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:baselineAligned="false"
    android:clickable="true"
    android:orientation="horizontal"
    android:padding="8dp">

    <RelativeLayout
        android:id="@+id/match_title_container"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginRight="8dp"
        android:layout_weight="1.5">

        <TextView
            android:id="@+id/match_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Quarters\n1 - 1"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

    <TableLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="6">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:minHeight="40dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="40dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/red1"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:background="@color/lighter_red"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="Red 1" />

                    <TextView
                        android:id="@+id/red2"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:background="@color/lighter_red"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="Red 2" />

                    <TextView
                        android:id="@+id/red3"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:background="@color/lighter_red"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="Red 3" />

                    <TextView
                        android:id="@+id/red_score"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1.5"
                        android:background="@color/light_red"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="Red Score"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="40dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/blue1"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:background="@color/lighter_blue"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="Blue 1" />

                    <TextView
                        android:id="@+id/blue2"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:background="@color/lighter_blue"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="Blue 2" />

                    <TextView
                        android:id="@+id/blue3"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:background="@color/lighter_blue"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="Blue 3" />

                    <TextView
                        android:id="@+id/blue_score"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1.5"
                        android:background="@color/light_blue"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="Blue Score"
                        android:textStyle="bold" />

                </LinearLayout>
            </LinearLayout>

        </TableRow>
    </TableLayout>


</LinearLayout>
